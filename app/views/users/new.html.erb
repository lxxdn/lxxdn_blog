
   <div class="container">

	  <div class="form-sign">
      <%= form_for(@user) do |f| %>
      		<h2 class="form-signin-heading">Please sign up</h2>
      		<%= f.text_field :username,class: "input-block-level",placeholder: "User name" %>
      		<%= f.text_field :email, class: "input-block-level",placeholder: "Email address"%>
      		<%= f.password_field :password, class: "input-block-level", placeholder: "Password"%>
      		<%= f.password_field :password_confirmation ,class: "input-block-level",
      		 placeholder: "Confirmation Password" %>
      		<%= f.submit "Sign up", class: "btn btn-large btn-primary"  %>
      <% end %>
      </div>

    </div>

 
 <!-- /container -->