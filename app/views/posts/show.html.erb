
<%= render 'posts/header' %>

<div class="single_post">
<h2><%= @post.title %></h2>

<div class="post_tags">
	Tags: 
	<% @post.tags.each do |tag| %>
		<a href='#'><%= tag.title %></a>
	<% end %>
</div>

<div class="markdown">
<%= raw(markdown @post.content) %>
</div>

<%= render 'posts/footer' %>

<div class="comment_title">
	<%= pluralize(@post.comments.size, 'comment') %>
</div>


<%# comments %>
<%= render "comments/comments" %>

<%= render "comments/to_comment" unless current_user == nil%>

</div>



