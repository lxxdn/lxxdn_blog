<div class="comments" >
		
	<div class="left_gravatar_imag" id="ready_to_comment">
		<%= image_tag current_user.gravatar_img_src %>
	</div>

	<div class="right_part">
		<div class="markdown_show_mode">
			<%= link_to 'edit', '#', class: "edit"%>
			<%= link_to 'preview', '#', class: "preview"%>
		</div>
		<%= form_for(@post.comments.new,name: "new_post_comment_form", url: comments_path) do |f|%>
			<div><%= f.hidden_field :post_id %></div>
			<div><%= f.hidden_field :user_id, value: current_user.id %></div>
			<%= f.text_area :content, placeholder: "Comment...", id: "conmment_area"%>
			<div class="markdown_preview"></div>  
			<%= f.submit 'Comment', class: 'btn btn-primary',id: 'comment_submit'%>
		<% end %>
	</div>
</div>

